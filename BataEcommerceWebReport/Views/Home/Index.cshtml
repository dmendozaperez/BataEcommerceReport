@using BataEcommerceWebReport.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Bata Report App</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Images/lock-favicon.png")" />
    @Styles.Render("~/Scripts/vendors/bootstrap/dist/css/bootstrap.min.css")
    @Styles.Render("~/Scripts/vendors/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/Content/custom.css")
</head>
<body style="background:#F7F7F7;">
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>
        <div id="wrapper">
            <div id="login" class="form">
                <div style="text-align:center;">
                    <img src="@Url.Content("~/Images/bata-report-app.png")" alt="Bata Report App" width="150" height="150">
                </div>
                <section class="login_content">
                    @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Iniciar Sesión</h1>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.TextBoxFor(m => m.Username, new { placeholder = "Usuario", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            <div class="col-md-offset-2 col-md-10">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div>
                            <input type="submit"  class="btn btn-default submit" value="Iniciar sesión" />
                            <a class="reset_pass" href="#">¿Recordar contraseña?</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><img src="@Url.Content("~/Images/bata-46x46.png")" width=46 height=46 alt="Bata Perú">&nbsp;&nbsp;Bata Report App</h1>
                                <p>Área de Sistemas - Bata Perú - &copy; @DateTime.Now.Year</p>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>
